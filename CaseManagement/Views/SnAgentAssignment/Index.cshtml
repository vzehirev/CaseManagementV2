@model CaseManagement.ViewModels.SnAgentAssignment.IndexViewModel

<h1>AGENT ASSIGNMENT DASHBOARD</h1>

@if (this.TempData["UpdateSuccessful"] as bool? == true)
{
    <div class="alert alert-dismissible alert-success w-25">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Updated successfully.</strong>
    </div>
}

<form method="post" asp-area="" asp-controller="AgentAssignment" asp-action="UpdateAvailabilityAndSkills">
    <button type="submit" class="btn btn-success mb-2">UPDATE</button>

    <table class="table table-hover">
        <thead>
            <tr class="table-active">
                <th scope="col">C USER</th>
                <th scope="col">NAME</th>
                <th scope="col">AVAILABLE</th>
                <th scope="col">TTES 1&2</th>
                <th scope="col">TTES 3&4</th>
                <th scope="col">RTPU 1&2</th>
                <th scope="col">RTPU 3&4</th>
                <th scope="col">EXECUTE 1&2</th>
                <th scope="col">EXECUTE 3&4</th>
                <th scope="col">OTHER 1&2</th>
                <th scope="col">OTHER 3&4</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.AgentsAvailabilityAndSkills.Count(); i++)
            {
                <input type="hidden" asp-for="@Model.AgentsAvailabilityAndSkills[i].UserId" />
                <tr class="table-warning">
                    <th scope="row">@Model.AgentsAvailabilityAndSkills[i].CUser</th>
                    <th scope="row">@Model.AgentsAvailabilityAndSkills[i].FullName</th>
                    <td>
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="available-@i" asp-for="@Model.AgentsAvailabilityAndSkills[i].IsAvailable">
                            <label class="custom-control-label" for="available-@i"></label>
                        </div>
                    </td>
                    <td>
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="ttes12-@i" asp-for="@Model.AgentsAvailabilityAndSkills[i].TTES12">
                            <label class="custom-control-label" for="ttes12-@i"></label>
                        </div>
                    </td>
                    <td>
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="ttes34-@i" asp-for="@Model.AgentsAvailabilityAndSkills[i].TTES34">
                            <label class="custom-control-label" for="ttes34-@i"></label>
                        </div>
                    </td>
                    <td>
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="rtpu12-@i" asp-for="@Model.AgentsAvailabilityAndSkills[i].RTPU12">
                            <label class="custom-control-label" for="rtpu12-@i"></label>
                        </div>
                    </td>
                    <td>
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="rtpu34-@i" asp-for="@Model.AgentsAvailabilityAndSkills[i].RTPU34">
                            <label class="custom-control-label" for="rtpu34-@i"></label>
                        </div>
                    </td>
                    <td>
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="ex12-@i" asp-for="@Model.AgentsAvailabilityAndSkills[i].EX12">
                            <label class="custom-control-label" for="ex12-@i"></label>
                        </div>
                    </td>
                    <td>
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="ex34-@i" asp-for="@Model.AgentsAvailabilityAndSkills[i].EX34">
                            <label class="custom-control-label" for="ex34-@i"></label>
                        </div>
                    </td>
                    <td>
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="other12-@i" asp-for="@Model.AgentsAvailabilityAndSkills[i].Other12">
                            <label class="custom-control-label" for="other12-@i"></label>
                        </div>
                    </td>
                    <td>
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="other34-@i" asp-for="@Model.AgentsAvailabilityAndSkills[i].Other34">
                            <label class="custom-control-label" for="other34-@i"></label>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
